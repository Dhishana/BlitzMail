<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:dialogTheme">@style/InvisibleTheme</item>
        <item name="android:dialogPreferenceStyle">@style/InvisibleTheme</item>
        <item name="android:preferenceStyle">@style/InvisibleTheme</item>
        <item name="android:alertDialogTheme">@style/InvisibleTheme</item>
        <item name="android:alertDialogStyle">@style/InvisibleTheme</item>
    </style>

    <style name="InvisibleTheme" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

</resources>
